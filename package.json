{
  "name": "bluesky-daily-mcp",
  "description": "An MCP Server to help you surface the most interesting topics from your Bluesky follows daily.",
  "version": "0.1.4",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/briangershon/bluesky-daily-mcp.git"
  },
  "author": "Brian Gershon <briangershon@users.noreply.github.com>",
  "keywords": [
    "bluesky",
    "bsky",
    "atproto",
    "mcp",
    "mcp-server",
    "modelcontextprotocol",
    "summary",
    "summarize"
  ],
  "files": [
    "/dist"
  ],
  "bin": {
    "bluesky-daily-mcp": "dist/cli.js"
  },
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "rollup -c",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "prepare": "npm run build",
    "retrieve-posts": "tsx scripts/retrievePosts.ts"
  },
  "dependencies": {
    "@atproto/api": "^0.14.16",
    "@modelcontextprotocol/sdk": "^1.7.0",
    "bsky-tldr": "^2.1.4"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/node": "^22.9.0",
    "@vitest/coverage-v8": "^3.1.1",
    "dotenv": "^16.4.7",
    "rollup": "^4.34.0",
    "rollup-plugin-dts": "^6.1.1",
    "tslib": "^2.8.1",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "vitest": "^3.1.1"
  }
}
